{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["bun"]
  },
  "include": ["api/**/*.ts", "src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts"]
}
